@model IEnumerable<DotnetCasts.Models.Lesson>
@{
    ViewData["Title"] = "";
}

<div class="lg:pb-14 lg:overflow-hidden text-gray-500 px-4 sm:px-6">
    <div class="mx-auto max-w-7xl lg:px-8">
        <div class="text-left sm:text-center pt-8 pb-16 sm:pt-12">
            <h1 class="text-4xl sm:text-6xl lg:text-7xl leading-none font-extrabold tracking-tight text-gray-900 mb-8">
                Learn .NET Core
            </h1>
            <p class="max-w-screen-lg mx-auto text-lg sm:text-2xl sm:leading-10 font-medium mb-8">
                Level up your development skills through expert screencasts on .NET Core, EF Core, React, and much more.
            </p>
            <a href="#episodes" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-800 hover:bg-blue-900">
                Start Watching
            </a>
        </div>
        <articles class="pb-10 sm:pb-16" id="episodes">
            <h3 class="text-xl leading-9 font-extrabold text-gray-900 sm:text-3xl sm:leading-10 text-left pb-2 sm:pb-6">
                The episodes
            </h3>
            <div class="h-2 w-32 rounded bg-blue-800 mb-10 sm:mb-16 md:mb-20">
            </div>

            @foreach (var lesson in Model)
            {
                <section class="mb-10 sm:mb-16 md:mb-20 flex">
                    <div class="w-1/3 lg:w-1/4 hidden sm:block pr-4">
                        <div class="w-full h-full bg-@lesson.Color flex flex-col p-6 text-center rounded-l-lg justify-between text-white">
                            <p class="text-lg sm:text-2xl font-medium sm:leading-10">
                                @lesson.Type
                            </p>
                            <div class="rounded-full w-32 h-32 flex items-center justify-center border-8 border-white mx-auto">
                                <img class="h-16 w-16" src="~/images/white-meteor.svg" alt="">
                            </div>
                            <div class="lg:inline-flex items-center justify-center">
                                <p class="text-xs sm:text-md font-medium sm:leading-10">
                                    1 Episodes
                                </p>
                                <span class="m-1 hidden lg:block">•</span>
                                <div class="text-xs sm:text-md font-medium sm:leading-10 inline-flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>@lesson.RuntimeDisplayValue()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sm:pl-6">
                        <h2 class="text-3xl sm:text-5xl lg:text-6xl leading-none font-extrabold text-gray-900 tracking-tight mb-8">@lesson.Title</h2>
                        <p class="max-w-4xl text-lg sm:text-2xl font-medium sm:leading-10 space-y-6 mb-6">
                            @lesson.Description
                        </p>
                        <a asp-route="lessons.show" asp-route-slug="@lesson.Slug" class="inline-flex items-center text-lg sm:text-2xl font-medium transition-colors duration-200 rounded-md text-@lesson.Color">
                            Watch&nbsp;<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </a>
                    </div>
                </section>
            }
            <section class="mb-10 sm:mb-16 md:mb-20 flex">
                <div class="w-1/3 lg:w-1/4 hidden sm:block pr-4">
                    <div class="w-full h-full bg-pink-600 flex flex-col p-6 text-center rounded-l-lg justify-between text-white">
                        <p class="text-lg sm:text-2xl font-medium sm:leading-10">
                            Techniques
                        </p>
                        <div class="rounded-full w-32 h-32 flex items-center justify-center border-8 border-white mx-auto">
                            <img class="h-16 w-16" src="~/images/white-meteor.svg" alt="">
                        </div>
                        <div class="inline-flex items-center justify-center">
